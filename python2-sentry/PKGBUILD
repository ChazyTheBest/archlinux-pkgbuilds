# Source: https://github.com/zancarius/archlinux-pkgbuilds

## !!! WARNING, PLEASE READ !!! ##
#
# python2-sentry will be RENAMED to sentry as per the Arch
# Python packaging guidelines since this is an application and
# not a library:
# https://wiki.archlinux.org/index.php/Python_Package_Guidelines
#
# Please install the package "sentry" instead.
#
# I will continue maintaining this package for a few update
# cycles until December 1st, 2012, at which point this package
# WILL BE MERGED into sentry.

pkgname=python2-sentry
pkgver=5.1.0
pkgrel=1
pkgdesc="Python-based realtime logging and aggregation server."
arch=(any)
url="http://pypi.python.org/pypi/sentry"
license=(BSD)
depends=(
    'django-crispy-forms>=1.1.4'
    'django-indexer>=0.3.0'
    'django-paging>=0.2.4'
    'django-picklefield>=0.2.0'
    'django-social-auth>=0.7.1'
    'django-social-auth-trello>=1.0.2'
    'django-templatetag-sugar>=0.1'
    'gunicorn>=0.14.6'
    python2
    'python-simplejson>=2.1.6'
    'python2-amqplib>=1.0.2'
    'python2-anyjson>=0.3.3'
    'python2-beautifulsoup3>=3.2.1'
    'python2-billiard>=2.7.3.12'
    'python2-dateutil>=1.5'
    'python2-django-celery>=2.5.5'
    'python2-httpagentparser>=1.0.5'
    'python2-kombu>=2.4.0'
    'python2-logan>=0.5.1'
    'python2-oauth2>=1.5.167'
    'python2-openid>=2.2'
    'python2-pynliner>=0.4.0'
    'python2-raven>=2.0.6'
    'python2-south>=0.7.6'
)
makedepends=(python2-distribute)
optdepends=(
    'mysql-python: MySQL backend support'
    'python2-psycopg2: PostgreSQL backend support'
)
install="${pkgname}.install"
source=(
    "http://pypi.python.org/packages/source/s/sentry/sentry-${pkgver}.tar.gz"
    "${pkgname}.install"
    "sentry.service"
)
md5sums=(
    a93687928f588f65ca55de18f86b912c # sentry tarball
    82b703893a53b55482efc7e58b69042d # install file
    5735e776b1842c686ebf074b1904e7bd # systemd service
)

build () {
    
    cd "${srcdir}/sentry-${pkgver}"
    python2 setup.py install --root="${pkgdir}/" --optimize=1

    # Remove Desktop Services Store from package. This has been removed
    # from django-paging's Github repo but still persists in the PIP
    # package. Harmless, but I don't like them. :) More information:
    # http://en.wikipedia.org/wiki/.DS_Store
    find "${pkgdir}" -name '.DS_Store' -delete

}

package () {

    install -Dm0644 "${srcdir}/sentry-${pkgver}/LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -Dm0644 "${srcdir}/sentry.service" "${pkgdir}/usr/lib/systemd/system/sentry.service"

}